@{
    ViewData["Title"] = "Dashboard";
}

<div class="container text-center">
    <h1>@ViewData["Title"]</h1>
    <div>
        <canvas id="barChart" width="200" height="110" style="width:197px;height:110px;"></canvas>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        $.ajax({
            type: "POST",
            url: "/Home/GetTotalCountOfEachStatus",
            data: "",
            contextType: "application/json; charset=utf8",
            dataType: "json",
            success: OnSuccess,
            error: OnError
        });

        function OnSuccess(data) {
            const barChart = document.getElementById('barChart');
            var _data = data;
            var _labels = ['available', 'overdue', 'rented'];
            var colors = ['Green', 'Red', 'Orange'];

            new Chart(barChart,
                {
                    type: 'bar',
                    data: {
                        labels: _labels,
                        datasets: [{
                            labels: 'Number of Devices',
                            data: _data,
                            borderWidth: 1,
                        }]
                    },
                    options: {
                        scales: {
                            y: {
                                beginAtZero: true
                            }
                        }
                    }
                });
        }

        function OnError(jqXHR) {
            alert("Status code of: " + jqXHR.status);
        }
    });
</script>