@{
    ViewData["Title"] = "Active Loans";
}

<div class="container text-center">
    <h1>@ViewData["Title"]</h1>

    <a role="button" class="btn btn-outline-success fw-semibold my-3">New Loan</a>

    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th scope="col">Device</th>
                <th scope="col">Student</th>
                <th scope="col">Start Date</th>
                <th scope="col">End Date</th>
                <th scope="col">Status</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>MacBook Pro</td>
                <td>Logan Conley</td>
                <td>10/6/2024</td>
                <td>10/31/2024</td>
                <td>Available</td>
                <td>
                    <a role="button" class="btn btn-outline-warning fw-semibold my-3">Update</a>
                    <a role="button" class="btn btn-outline-danger fw-semibold my-3">End</a>
                </td>
            </tr>
        </tbody>
    </table>
</div>